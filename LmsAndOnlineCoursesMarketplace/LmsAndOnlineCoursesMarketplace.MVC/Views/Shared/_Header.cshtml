<header class="header clearfix">
	<button type="button" id="toggleMenu" class="toggle_menu">
		<i class='uil uil-bars'></i>
	</button>
	<button id="collapse_menu" class="collapse_menu">
		<i class="uil uil-bars collapse_menu--icon "></i>
		<span class="collapse_menu--label"></span>
	</button>
	<div class="main_logo" id="logo">
		<a href="/"><img src="~/assets/images/logo.svg" alt=""></a>
		<a href="/"><img class="logo-inverse" src="~/assets/images/ct_logo.svg" alt=""></a>
	</div>
	<div class="header_right">
		<ul>
			<li>
				<a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="upload_btn" title="To Dashboard">To Dashboard</a>
			</li>
			<li>
				<a asp-controller="ShoppingCart" asp-action="Index" class="option_links" title="cart"><i class='uil uil-shopping-cart-alt'></i></a>
			</li>
			<li>
				<a asp-controller="Chats" asp-action="Index" class="option_links"><i class='uil uil-envelope-alt'></i></a>
			</li>
			<li class="profile-dropdown">
				<a href="#" class="opts_account" data-bs-toggle="dropdown" data-bs-auto-close="outside" aria-expanded="false">
					<img src="@Url.Content($"~/assets/images/left-imgs/img-{ViewBag.CurrentUserId}.jpg")" alt="">
				</a>
					<div class="dropdown-menu dropdown_account drop-down dropdown-menu-end">
						<div class="channel_my">
							<div class="profile_link">
								<img src="@Url.Content($"~/assets/images/left-imgs/img-{ViewBag.CurrentUserId}.jpg")" alt="">
								<div class="pd_content">
									<div class="rhte85">
										<h6>@ViewBag.CurrentUserName</h6>
										<div class="mef78" title="Verify">
											<i class='uil uil-check-circle'></i>
										</div>
									</div>
									<span>@ViewBag.CurrentEmail</span>
								</div>							
							</div>
							<a asp-controller="Profile" asp-action="Index" class="dp_link_12">View Profile</a>						
						</div>
						<div class="night_mode_switch__btn">
							<a href="#" id="night-mode" class="btn-night-mode">
								<i class="uil uil-moon"></i> Night mode
								<span class="btn-night-mode-switch">
									<span class="uk-switch-button"></span>
								</span>
							</a>
						</div>
						<a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="item channel_item">Cursus dashboard</a>						
						<a asp-controller="Settings" asp-action="Index" class="item channel_item">Settings</a>
						<a asp-controller="Login" asp-action="Index" class="item channel_item">Sign Out</a>
					</div>
			</li>
		</ul>
	</div>
</header>
<script src="~/assets/js/vertical-responsive-menu.min.js"></script>
<script src="~/assets/js/jquery-3.7.1.min.js"></script>
<script src="~/assets/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/assets/lib/OwlCarousel/owl.carousel.js"></script>
<script src="~/assets/lib/semantic/semantic.min.js"></script>
<script src="~/assets/lib/bootstrap-select/docs/docs/dist/js/bootstrap-select.js"></script>
<script src="~/assets/js/custom.js"></script>
<script src="~/assets/js/night-mode.js"></script>