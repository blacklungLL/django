		</div>
		<div class="_215b17">
			<div class="container-fluid">
				<div class="row">
					<div class="col-lg-12">
						<div class="course_tab_content">
							<div class="tab-content" id="nav-tabContent">
								<div class="tab-pane fade show active" id="nav-about" role="tabpanel">
									<div class="_htg451">
										<div class="_htg452">
											<h3>About Me</h3>
											<p>@Model.Description</p>
										</div>																	
									</div>							
								</div>
								<div class="tab-pane fade" id="nav-courses" role="tabpanel">
									<div class="crse_content">
										<h3>My Courses (@Model.CreatedCourses.Count)</h3>
										<div class="_14d25">
											<div class="row">
												@if (Model.CreatedCourses.Any())
												{
													foreach (var course in Model.CreatedCourses)
													{
														<div class="col-lg-3 col-md-4">
															<div class="fcrse_1 mt-30">
																<a href="@Url.Action("Index", "Course", new { id = course.Id })" class="fcrse_img">
																	<img src="@course.ImageLink" alt="@course.Title">
																	<div class="course-overlay">
																		<div class="badge_seller">Bestseller</div>
																		<div class="crse_reviews">
																			<i class="uil uil-star">@course.Rating</i>
																		</div>
																		<span class="play_btn1"><i class="uil uil-play"></i></span>
																		<div class="crse_timer">
																			@course.Duration
																		</div>
																	</div>
																</a>
																<div class="fcrse_content">
																	<div class="eps_dots more_dropdown">
																		<a href="#"><i class="uil uil-ellipsis-v"></i></a>
																		<div class="dropdown-content">
																			<span><i class="uil uil-share-alt"></i>Share</span>
																			<span><i class="uil uil-heart"></i>Save</span>
																			<span><i class='uil uil-ban'></i>Not Interested</span>
																			<span><i class="uil uil-windsock"></i>Report</span>
																		</div>
																	</div>
																	<div class="vdtodt">
																		<span class="vdt14">@course.Views views</span>
																		<span class="vdt14">15 days ago</span>
																	</div>
																	<a href="@Url.Action("Index", "Course", new { id = course.Id })" class="crse14s">@course.Title</a>
																	<a href="#" class="crse-cate">@course.Category | @course.Language</a>
																	<div class="auth1lnkprce">
																		<p class="cr1fot">By <a href="#">@Model.Name</a></p>
																		<div class="prce142">$@course.Price</div>
																		<button class="shrt-cart-btn" title="cart"><i class="uil uil-shopping-cart-alt"></i></button>
																	</div>
																</div>
															</div>
														</div>
													}
												}
												else
												{
													<p>You do not have any courses yet</p>
												}
											</div>
										</div>
									</div>
								</div>
								<div class="tab-pane fade show" id="nav-purchased" role="tabpanel">
									<div class="_htg451">
										<div class="_htg452">
											<h3>Purchased Courses</h3>
											<div class="row">
												@if (Model.PurchasedCourses != null && Model.PurchasedCourses.Any())
												{
													foreach (var course in Model.PurchasedCourses)
													{
														<div class="col-md-9">
															<div class="fcrse_1 mt-20">
																<a asp-controller="Course" asp-action="Index" asp-route-id="@course.Id" class="hf_img">
																	<img src="@course.ImageLink" alt="@course.Title">
																	<div class="course-overlay">
																		<div class="badge_seller">Bestseller</div>
																		<div class="crse_reviews">
																			<i class="uil uil-star"></i>@course.Rating
																		</div>
																		<span class="play_btn1"><i class="uil uil-play"></i></span>
																		<div class="crse_timer">@course.Duration</div>
																	</div>
																</a>
																<div class="hs_content">
																	<div class="eps_dots eps_dots10 more_dropdown">
																		<a href="#"><i class="uil uil-ellipsis-v"></i></a>
																		<div class="dropdown-content">
																			<span><i class="uil uil-download-alt"></i>Download</span>
																			<span><i class="uil uil-trash-alt"></i>Delete</span>
																		</div>
																	</div>
																	<div class="vdtodt">
																		<span class="vdt14">@course.Views views</span>
																		<span class="vdt14">15 days ago</span>
																	</div>
																	<a asp-controller="Course" asp-action="Index" asp-route-id="@course.Id" class="crse14s title900">@course.Title</a>
																	<a href="#" class="crse-cate">@course.Category | @course.Language</a>
																	<div class="purchased_badge">Purchased</div>
																	<div class="auth1lnkprce">
																		<p class="cr1fot">By <a asp-controller="OtherUserProfile" asp-action="Index" asp-route-id="@course.AuthorId">@course.AuthorName</a></p>
																		<div class="prce142">$@course.Price</div>
																		<button class="shrt-cart-btn" title="cart">
																			<i class="uil uil-shopping-cart-alt"></i>
																		</button>
																	</div>
																</div>
															</div>
														</div>
													}
												}
												else
												{
													<div class="col-md-12">
														<p>У вас пока нет купленных курсов.</p>
													</div>
												}
											</div>
										</div>
									</div>
								</div>
								<div class="tab-pane fade show" id="nav-subscriptions" role="tabpanel">
									<div class="_htg451">
										<div class="_htg452">
											<h3>Subscriptions</h3>
											<div class="row">
												@if (Model.Subscriptions.Any())
												{
													foreach (var sub in Model.Subscriptions)
													{
														<div class="col-lg-3 col-md-4">
															<div class="fcrse_1 mt-30">
																<div class="tutor_img">
																	<a asp-controller="OtherUserProfile" asp-action="Index" asp-route-id="@sub.Id" ><img src="@Url.Content($"~/assets/images/left-imgs/img-{sub.Id}.jpg")" alt=""></a>
																</div>
																<div class="tutor_content_dt">
																	<div class="tutor150">
																		<a asp-controller="OtherUserProfile" asp-action="Index" asp-route-id="@sub.Id" class="tutor_name">@sub.Name</a>
																		<div class="mef78" title="Verify">
																			<i class="uil uil-check-circle"></i>
																		</div>
																	</div>
																	<div class="tutor_cate">@sub.JobPosition</div>
																	<ul class="tutor_social_links">
																		<li><button class="sbbc145">Subscribed</button></li>
																		<li><button class="sbbc146"><i class="uil uil-bell"></i></button></li>
																	</ul>
																	<div class="tut1250">
																		<span class="vdt15">@sub.SubscribersCnt Students</span>
																		<span class="vdt15">@sub.CourseCnt Courses</span>
																	</div>
																</div>
															</div>
														</div>
													}
												}
											</div>			
										</div>																	
									</div>							
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
